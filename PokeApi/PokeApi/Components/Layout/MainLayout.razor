@inherits LayoutComponentBase

@* Utilizamos MudBlazor*@
@using MudBlazor


@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="0" style="background-color: #f7f7f7;" Class="border" >

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />

    </MudAppBar>

    @* NAVBAR -- ---------------------------------  --------------------------- *@
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">

        @* Agregamos el componente NavMenu *@
        <NavMenu />

    </MudDrawer>

    @* CONTENIDO DEL BODY ----------------------------------- -- - - ----------- *@
    <MudMainContent class="full-width px-5">

        <MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">

            @*GRID ---------------*@
            <MudGrid>

                <MudItem xs="12" sm="12" md="12" lg="12" Class="d-flex justify-content-center">

                    <MudGrid Class="d-flex justify-center" Style="">

                        @*xs="12" ítem en dispositivos extra pequeños (xs)*@
                        @*sm="12": dispositivos pequeños (sm). *@
                        @*md = dispositivos de tamaño mediano.*@   
                        @*lg = *@
                        
                        @Body

                    </MudGrid>

                </MudItem>

            </MudGrid>
        </MudContainer>


    </MudMainContent>

</MudLayout>



<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}